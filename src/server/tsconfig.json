{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDirs": [
      "src",
      "typings",
      "node_modules"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ]
    }
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
